{% extends 'base.html.twig' %}

{% block title %}Groupe index{% endblock %}

{% block body %}
    <h1>Groupe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Namegroupe</th>
                <th>Desgroupe</th>
                <th>Typegroupe</th>
                <th>Membremax</th>
                <th>Iduser</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for groupe in groupes %}
            <tr>
                <td>{{ groupe.id }}</td>
                <td>{{ groupe.Namegroupe }}</td>
                <td>{{ groupe.Desgroupe }}</td>
                <td>{{ groupe.Typegroupe }}</td>
                <td>{{ groupe.Membremax }}</td>
                <td>{{ groupe.Iduser }}</td>
                <td>
                    <a href="{{ path('app_groupe_show', {'id': groupe.id}) }}">show</a>
                    <a href="{{ path('app_groupe_edit', {'id': groupe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_groupe_new') }}">Create new</a>
{% endblock %}
