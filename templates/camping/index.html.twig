{% extends 'base.html.twig' %}

{% block title %}Camping index{% endblock %}

{% block body %}
    <h1>Camping index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Namecamp</th>
                <th>Descamp</th>
                <th>Placecamp</th>
                <th>Datecamp</th>
                <th>Ndaycamp</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for camping in campings %}
            <tr>
                <td>{{ camping.id }}</td>
                <td>{{ camping.Namecamp }}</td>
                <td>{{ camping.Descamp }}</td>
                <td>{{ camping.Placecamp }}</td>
                <td>{{ camping.Datecamp ? camping.Datecamp|date('Y-m-d') : '' }}</td>
                <td>{{ camping.Ndaycamp }}</td>
                <td>
                    <a href="{{ path('app_camping_show', {'id': camping.id}) }}">show</a>
                    <a href="{{ path('app_camping_edit', {'id': camping.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_camping_new') }}">Create new</a>
{% endblock %}
